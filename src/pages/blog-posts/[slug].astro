---
import moment from 'moment';
import type { GetStaticPaths } from 'astro';

import type { BlogPost } from '../../lib/types/blogPost';
import { getAllBlogs, getBlogPostBySlug } from '../../lib/contentful';
import { displayRichText } from '../../lib/richTextOptions';

import BaseLayout from '../../layouts/BaseLayout.astro';
import AuthorNoteComponent from '../../components/AuthorNoteComponent.astro';

export const getStaticPaths = (async () => {
  const blogPosts = await getAllBlogs();
  
  return blogPosts.map((post: BlogPost) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const pathname = Astro.url.pathname;

if (!post?.slug) {
  throw new Error('Blog post slug is required but not found');
}
const fullPost = await getBlogPostBySlug(post.slug);

const blogContentHtml = fullPost.blogContent ? displayRichText(fullPost.blogContent) : '';
---

<BaseLayout title={fullPost.title} description={fullPost.description}>
  <div class="blog-post">
    <article>
      <header>
        <h1 class="text-2xl font-bold !mb-1">{fullPost.title}</h1>

        <div class="flex gap-6">
          <div class="mt-3">
            <p class="text-sm text-gray-600 dark:text-gray-400">{moment(fullPost.date).format("MMMM DD, YYYY")}</p>
          </div>
          
          <button class="tinylytics_kudos" data-path={pathname}></button>
        </div>
      </header>
      
      <div class="row prose prose-lg max-w-none">
        <Fragment set:html={blogContentHtml} />
      </div>
      
      <AuthorNoteComponent />
    </article>
  </div>
</BaseLayout>
