---
import type { GetStaticPaths } from 'astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllBlogs, getBlogPostBySlug } from '../../lib/contentful';
import moment from 'moment';
import { documentToHtmlString } from '@contentful/rich-text-html-renderer';
import AuthorNote from '../../components/AuthorNote.astro';

export const getStaticPaths = (async () => {
  const blogPosts = await getAllBlogs();
  
  return blogPosts.map((post: any) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const fullPost = await getBlogPostBySlug((post as any).slug);
const pathname = Astro.url.pathname;

// Simple HTML rendering without complex options
const blogContentHtml = documentToHtmlString(fullPost.blogContent.json);
---

<BaseLayout title={fullPost.title} description={fullPost.description}>
  <div class="blog-post">
    <article>
      <header>
        <h1 class="text-2xl font-bold !mb-1">{fullPost.title}</h1>

        <div class="flex gap-2">
          <div class="mt-2">
            <p class="text-sm text-gray-600 dark:text-gray-400">{moment(fullPost.date).format("MMMM DD, YYYY")}</p>
          </div>
          
          <button class="tinylytics_kudos" data-path={pathname}>❤️</button>
        </div>
      </header>
      
      <div class="row prose prose-lg max-w-none">
        <Fragment set:html={blogContentHtml} />
      </div>
      
      <AuthorNote />
    </article>
  </div>
</BaseLayout>
