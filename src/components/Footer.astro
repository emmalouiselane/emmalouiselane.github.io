---
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faLinkedin, faGithub } from "@fortawesome/free-brands-svg-icons";

const footerTagline =
  "Sparks fuel ideas â€” SparkLane.dev brings those ideas to life.";
const social = {
  linkedIn: "https://linkedin.com/in/emmalouiselane",
  gitHub: "https://github.com/emmalouiselane",
};
---

<div class="container footer-content mx-auto px-4">
  <div class="grid grid-cols-2 md:grid-cols-12 gap-4 items-center">
    <div
      class="col-span-1 md:col-span-2 order-2 md:order-1 flex justify-left md:justify-start items-center"
    >
      <a class="navbar-link" href="/accessibility-statement">Accessibility</a>
    </div>

    <div class="col-span-2 md:col-span-8 order-1 md:order-2">
      <div class="footer-content-center">
        <p>{footerTagline}</p>
        <p>Built with Astro and shadcn/ui</p>
      </div>
    </div>

    <div class="col-span-1 md:col-span-2 order-3 md:order-3">
      <div
        class="footer-content-right flex justify-center md:justify-end items-center"
      >
        {
          social?.gitHub && (
            <a
              class="link social-link"
              href={social.gitHub}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="GitHub"
            >
              <FontAwesomeIcon
                icon={faGithub}
                size="2x"
                aria-hidden="true"
                client:load
              />
            </a>
          )
        }
        {
          social?.linkedIn && (
            <a
              class="link social-link"
              href={social.linkedIn}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="LinkedIn"
            >
              <FontAwesomeIcon
                icon={faLinkedin}
                size="2x"
                alt="LinkedIn"
                aria-hidden="true"
                client:load
              />
            </a>
          )
        }
      </div>
    </div>
  </div>
</div>
